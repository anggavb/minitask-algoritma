FUNCTION CountDiscount
	DECLARE purchase, totalPurchase : num
	DECLARE discount : float
BEGIN
	INPUT(purchase)
	IF purchase >= 500000
	THEN
		IF purchase > 1000000
			THEN
				discount = 0.1
			ELSE
				discount = 0.05
	ELSE
	  discount = 0
	ENDIF
	
	totalPurchase <- purchase - (purchase * discount)
	
	OUTPUT("Diskon anda sebesar " discount " dengan total harga " totalPurchase)
END
